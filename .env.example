# Environment Variables Template
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# PythonAnywhere SSH Configuration (if deploying to PythonAnywhere)
SSH_HOST=ssh.pythonanywhere.com
SSH_USERNAME=your-username
SSH_PASSWORD=your-ssh-password

# Database Configuration
DB_HOST=your-db-host
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=your-db-name
DATABASE_URL=mysql+pymysql://username:password@localhost/screenshot_to_code

# Email Configuration (SendGrid, Gmail, etc.)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=noreply@screenshot-to-code.com

# Celery & Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/1

# AI API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
AI_MODEL=gpt-4-vision-preview

# Stripe Payment Configuration
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Google Cloud Storage (optional)
STORAGE_TYPE=local
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Application Configuration
APP_NAME=Screenshot to Code
APP_URL=http://localhost:5000

# Credits Configuration
FREE_CREDITS_ON_SIGNUP=3.0
CREDITS_PER_CONVERSION=1.0
